<head>
  <script src="https://kit.fontawesome.com/a6976661c8.js" crossorigin="anonymous"></script>
</head>

<div class="container my-2">
  <div class="navbar-lewagon">
    <%= link_to "Edit", edit_list_path, class: 'btn btn-primary' %>
    <%= link_to "Bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
    <%= link_to "Home", lists_path, class: 'btn btn-primary' %>
    <%# <%= link_to "Delete", list_path(@list), method: 'delete', class: 'btn btn-primary'%>
    <%= link_to "Add movie", new_movie_path(@movie), class: 'btn btn-primary' %>
  </div>
</div>
<div class="container mt-5">
  <div class=" d-flex justify-content-center">
    <h1>
      <%=@list.name%>
    </h1>
  </div>

  <div class="container">
    <div class="row">
      <% @list.movies.each do |movie| %>
        <div class="col-4">
          <div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=movie.poster_url%>)'>
            <%= movie.title %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
