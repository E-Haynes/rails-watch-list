<div class="container mt-5">
  <h1>
    <%=@list.name%>
  </h1>
  <h3>
    <% @list.movies.each do |movie| %>
      <%= movie.title %>
    <% end %>
  </h3>
  <div class='d-flex col justify-content-center'>
    <%= link_to "Edit", edit_list_path, class: 'btn btn-primary m-4' %>
    <%= link_to "Bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary m-4' %>
    <%= link_to "Home", lists_path, class: 'btn btn-primary m-4' %>
    <%= link_to "Delete", list_path(@list), method: 'delete', class: 'btn btn-primary m-4'%>
  </div>
</div>
